{
  "name": "t3kit",
  "version": "9.0.0",
  "description": "t3kit project. A TYPO3 website starterkit.",
  "license": "GPL-2.0",
  "authors": "t3kit Community",
  "repository": "t3kit/t3kit",
  "scripts": {
    "dev": "npm-run-all -p css-lint js-lint css-compile js-compile",
    "prod": "npm-run-all -p css-lint js-lint -s css-compile css-prefix css-minify js-compile js-minify",
    "css-compile": "node-sass --output-style=expanded --source-map=true dev/styles/bootstrap.scss  ../Resources/Public/CSS/bootstrap.css",
    "css-lint": "stylelint \"dev/styles/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css-main": "npm-run-all css-lint css-compile css-prefix css-minify",
    "css-minify": "cleancss --level=1 --source-map --source-map-inline-sources --output ../Resources/Public/CSS/bootstrap.css ../Resources/Public/CSS/bootstrap.css",
    "css-prefix": "postcss ../Resources/Public/CSS/bootstrap.css --use=autoprefixer --map=false --output=../Resources/Public/CSS/bootstrap.css",
    "js-compile": "rollup --environment BUNDLE:false --config rollup.config.js --sourcemap",
    "js-lint": "standard \"dev/js/main/**/*.js\"",
    "js-lint-fix": "standard --fix \"dev/js/main/**/*.js\"",
    "js-minify": "npm-run-all --parallel js-minify-bundle",
    "js-minify-bundle": "terser --compress typeofs=false --mangle --comments \"/^!/\" --source-map \"content='../Resources/Public/JavaScript/bootstrap.js.map',includeSources,url=bootstrap.min.js.map\" --output ../Resources/Public/JavaScript/bootstrap.min.js ../Resources/Public/JavaScript/bootstrap.js",
    "js-main": "npm-run-all js-lint js-compile js-minify",
    "watch": "npm-run-all -p watch-*",
    "serve": "npm-run-all -p sync watch",
    "sync": "browser-sync start --config bs-config.js",
    "dev-css-main": "npm-run-all css-lint dev-css-compile",
    "dev-css-compile": "node-sass dev/styles/bootstrap.scss  ../Resources/Public/CSS/bootstrap.css",
    "dev-js-main": "npm-run-all js-lint dev-js-compile",
    "dev-js-compile": "rollup --config rollup.config.js",
    "watch-css": "nodemon --watch dev/styles/ --ext scss --exec  \"npm run dev-css-main\"",
    "watch-js": "nodemon --watch dev/js/ --ext js --exec \"npm run dev-js-main\""
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "bootstrap": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "clean-css-cli": "^4.3.0",
    "dotenv": "^8.0.0",
    "glob": "^7.1.3",
    "http-server": "^0.11.1",
    "jquery": "^3.4.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "rollup": "^1.19.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "standard": "11.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "terser": "^4.1.2"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=0.10.3 <0.12"
  }
}
