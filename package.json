{
  "name": "t3kit",
  "version": "10.0.0",
  "description": "Base theme for t3kit project. A TYPO3 website starterkit.",
  "license": "GPL-2.0",
  "authors": "t3kit Community",
  "repository": "t3kit/t3kit",
  "scripts": {
    "prepare": "husky install",
    "lint-css": "stylelint 'theme/src/css/**/*.css'",
    "lint-scss": "stylelint 'theme/src/scss/**/*.scss'",
    "lint-js": "standard -v 'theme/src/js/**/*.js' | snazzy",
    "lint-config": "standard -v 'theme/config/**/*.js' | snazzy",
    "lint-all": "npm-run-all --parallel lint-css lint-scss lint-js lint-config",
    "lint": "",
    "test": "npm-run-all --parallel lint-all",
    "favicons": "node theme/config/favicons.js",
    "filetypeIcons": "node theme/config/file-type-icons.js",
    "icons": "node theme/config/icons.js",
    "dev": "node theme/config/build.js",
    "build-dev": "",
    "prod": "NODE_ENV=production node theme/config/build.js",
    "build-prod": "",
    "build": "npm-run-all dev prod",
    "start": "node theme/config/start.js"
  },
  "dependencies": {
    "awesomplete": "~1.1.5",
    "bootstrap": "~v5.0.1",
    "bootstrap-icons": "~1.5.0",
    "file-icon-vectors": "~1.0.0",
    "simplelightbox": "git@github.com:dmh/simplelightbox.git#nodeps",
    "swiper": "~6.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "~7.14.2",
    "@node-sass/node-module-importer": "^1.2.3",
    "@rollup/plugin-babel": "~5.3.0",
    "@rollup/plugin-node-resolve": "~13.0.0",
    "@rollup/plugin-replace": "~2.4.2",
    "boxen": "~5.0.1",
    "browserslist": "~4.16.6",
    "chalk": "~4.1.1",
    "chokidar": "~3.5.1",
    "cpy": "~8.1.2",
    "cssnano": "~5.0.4",
    "cssom": "~0.5.0",
    "del": "~6.0.0",
    "fibers": "^5.0.0",
    "filesize": "~6.4.0",
    "fs-extra": "~10.0.0",
    "git-rev-sync": "~3.0.1",
    "globby": "~11.0.3",
    "hasha": "~5.2.2",
    "husky": "~7.0.0",
    "moment": "~2.29.1",
    "npm-run-all": "~4.1.5",
    "p-each-series": "2.2.0",
    "postcss": "~8.3.0",
    "postcss-import": "~14.0.2",
    "rfg-api": "~0.5.2",
    "rollup": "~2.52.2",
    "rollup-plugin-sizes": "~1.0.4",
    "rollup-plugin-terser": "~7.0.2",
    "sass": "1.32.13",
    "semver": "~7.3.5",
    "snazzy": "~9.0.0",
    "standard": "~16.0.3",
    "stylelint": "~13.13.1",
    "stylelint-config-standard": "~22.0.0",
    "stylelint-no-unsupported-browser-features": "~5.0.1"
  },
  "engines": {
    "node": ">=14.15.1",
    "npm": ">=7.9.0"
  },
  "browserslist": [
    "> 1.6% and last 2 versions",
    "IOS >= 13 and > 1.5%",
    "Safari >= 13 and > 1.5%"
  ],
  "standard": {
    "ignore": [
      "vendor/",
      "dist/",
      "Resources/Public/"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "selector-pseudo-element-colon-notation": "single",
      "no-descending-specificity": null,
      "comment-empty-line-before": null,
      "at-rule-no-unknown": null,
      "plugin/no-unsupported-browser-features": true
    },
    "ignoreFiles": [
      "**/vendor/**/*.css",
      "Resources/Public/**/*.css"
    ]
  }
}
