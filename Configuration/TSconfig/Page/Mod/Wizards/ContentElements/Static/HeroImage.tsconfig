mod.wizards.newContentElement.wizardItems.static {
  elements {
    heroImage {
      title = LLL:EXT:t3kit/Resources/Private/Language/ContentElements/Static/locallang_heroImage.xlf:heroImage.title
      description = LLL:EXT:t3kit/Resources/Private/Language/ContentElements/Static/locallang_heroImage.xlf:heroImage.description
      iconIdentifier = ce-heroImage
    }
  }
  show := addToList(heroImage)
}

