
# customcategory=t3kit=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:category.t3kit
# customsubcategory=meta=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:subcategory.meta
page.meta {
  # cat=t3kit/meta; type=string; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:meta.description
  description = t3kit project. A TYPO3 based web development eco-system.
  # cat=t3kit/meta; type=string; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:meta.author
  author = t3kit team
  # cat=t3kit/meta; type=string; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:meta.keywords
  keywords = TYPO3, t3kit
}

# customcategory=t3kit_advanced=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:category.t3kit_advanced
plugin.t3kit.settings {

  # customsubcategory=general=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:subcategory.general
  general {
    # cat=t3kit_advanced/general; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:container_width
    container_width = 1400

    # cat=t3kit_advanced/general; type=string; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:meta.viewport
    viewport = width=device-width, initial-scale=1, shrink-to-fit=no
  }

  # customsubcategory=media=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:subcategory.media
  media {
    videoConfig {
      # cat=t3kit_advanced/media; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:media.videoConfig.controls
      controls = 1
      # cat=t3kit_advanced/media; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:media.videoConfig.loop
      loop = 0
      # cat=t3kit_advanced/media; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:media.videoConfig.muted
      muted = 0
      # cat=t3kit_advanced/media; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:media.videoConfig.no-cookie
      no-cookie = 1
    }
    audioConfig {
      # cat=t3kit_advanced/media; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:media.audioConfig.controls
      controls = 1
      # cat=t3kit_advanced/media; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:media.audioConfig.loop
      loop = 0
      # cat=t3kit_advanced/media; type=boolean; label=LLL:EXT:t3kit/Resources/Private/Language/locallang_BE_TS_constants.xlf:media.audioConfig.muted
      muted = 0
    }
  }

}


